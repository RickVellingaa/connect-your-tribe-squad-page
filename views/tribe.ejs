<%- include('./partials/head') %>
<nav>
    <%- include('./partials/navigation') %>
</nav>
<main>
    <div class="detail">
        <ion-icon class="playlists__menu" name="menu-outline"></ion-icon>
        <section class="detail__header">
            <img class="detail__logo" src="/assets/favicon.jpeg" alt="Logo - Squad A">
            <div class="detail__squad">
                <span class="squad__usp">Playlist</span>
                <h1 class="squad__title">Onze Tribe</h1>
                <p class="squad__description">Alle studenten in de tribe van FDND!</p>
                <p class="squad__amount"><img src="/assets/favicon.jpeg" alt="Logo van squad A">Er zit meer dan 100
                    developers/designers in onze tribe!</p>
            </div>
        </section>
        <div class="detail__filters">
            <a href="?members?first=200&orderBy=name" class="filterBTN">Voornaam</a>
            <a href="?members?first=200&orderBy=surname" class="filterBTN">Achternaam</a>
            <a href="?members?first=200&orderBy=gitHubHandle" class="filterBTN">GitHub</a>
        </div>
        <div class="students">
            <div class="students__menu">
                <div>Naam</div>
                <div>Roepnaam</div>
                <div>Slug</div>
            </div>
            <% members.forEach(member => { %>
            <a href="/members?member=<%= member.id %>">
                <div class="students__list">
                    <div><% if (member.avatar) { %><img src="<%= member.avatar %>" alt=""><% }else{ %><img
                            src="/assets/favicon.jpeg" alt="Logo van squad A"><% } %><%= member.name %>
                        <%= member.surname %></div>
                    <div><% if (member.nickname) { %><%= member.nickname %><% }else{ %><%= member.name %><% } %></div>
                    <div>
                       <%= member.slug %>
                    </div>
                </div>
            </a>
            <% }) %>
        </div>
    </div>
</main>

<!-- Link naar JS -->
<script src="./scripts/script.js"></script>

<%- include('./partials/foot') %>